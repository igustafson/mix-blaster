<% content_for :content do %>
  <div class="pure-g">
    <div class="pure-u-1-6">
      <div class="mixtapes">
        <h1>Mixtapes</h1>
        <ul>
          <% @mixtapes.each do |mixtape| %>
          <li><%= link_to mixtape.title, mixtape_path(mixtape.id) %></li>
          <% end %>
          <li><%= link_to '+ New Mixtape', new_mixtape_path %></li>
        </ul>
      </div>
    </div>
    <div class="pure-u-5-6">
      <div id="main-content">
        <%= yield %>
      </div>
    </div>
  </div>
<% end %>
<%= render template: "layouts/application" %>